generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int      @id @default(autoincrement())
  createdAt            DateTime @default(now())
  email                String   @unique
  username             String
  password             String
  timezone             String   @default("utc")
  surveyCompletedTime  DateTime
  lastlogCompletedTime DateTime
}

model DailySurveys {
  id            Int      @id @default(autoincrement())
  ownerId       Int
  createdAt     DateTime @default(now())
  rating        Int
  mood          String
  anxietyReason String

  @@index([ownerId, createdAt(sort: Desc)])
}

model DailyLogs {
  id        Int      @id @default(autoincrement())
  ownerId   Int
  createdAt DateTime @default(now())
  title     String
  content   String

  @@index([ownerId, createdAt(sort: Desc)])
}
